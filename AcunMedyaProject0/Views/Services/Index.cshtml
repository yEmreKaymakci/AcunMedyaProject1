@model List<AcunMedyaProject0.Models.Tbl_Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="modern-title">Hizmetler sayfası</h2>

<div class="table-wrapper">
    <table class="my-table">
        <thead>
            <tr>
                <th>ServicesID</th>
                <th>Açıklama</th>
                <th>Başlık</th>
                <th>İkonUrl</th>
                <th>Açıklama2</th>
                <th>Güncelle</th>
                <th>Sil</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td> <div class="cell-content">@item.Decription</div></td>
                    <td>@item.Title</td>
                    <td><img src="@item.IconUrl" style="width:50px"</td>
                    <td> <div class="cell-content">@item.Decription2</div></td>
                    <td><a href="/Services/UpdateServices/@item.ServicesID" class="btn btn-dark">Güncelle</a></td>
                    <td><a href="/Services/DeleteServices/@item.ServicesID" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Services/CreateServices" class="btn btn-success">Ekle</a>
</div>