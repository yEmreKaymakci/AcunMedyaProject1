    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS (Modern versiyon) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600&display=swap" rel="stylesheet" />
    <!-- Özel Admin CSS -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
        }
        /* Admin Layout - Sidebar */
        .admin-wrapper {
            display: flex;
            min-height: 100vh;
            overflow: hidden;
        }

        .admin-sidebar {
            background: #2d3436;
            width: 250px;
            transition: width 0.3s ease-in-out;
            position: relative;
            color: #fff;
        }

            .admin-sidebar .logo {
                font-size: 24px;
                font-weight: 600;
                text-align: center;
                padding: 20px 0;
                border-bottom: 1px solid rgba(255,255,255,0.1);
            }

            .admin-sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                .admin-sidebar ul li a {
                    display: block;
                    padding: 15px 20px;
                    color: #dfe6e9;
                    text-decoration: none;
                    transition: background 0.2s;
                }

                    .admin-sidebar ul li a:hover, .admin-sidebar ul li.active a {
                        background: #636e72;
                        color: #fff;
                    }
        /* Sidebar Toggle Button */
        .sidebar-toggle {
            position: absolute;
            top: 15px;
            right: -45px;
            width: 40px;
            height: 40px;
            background: #2d3436;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            color: #fff;
            box-shadow: 0 2px 6px rgba(0,0,0,0.3);
            transition: right 0.3s ease;
        }

        .admin-sidebar.collapsed {
            width: 70px;
        }

            .admin-sidebar.collapsed .logo,
            .admin-sidebar.collapsed ul li a span {
                display: none;
            }

            .admin-sidebar.collapsed .sidebar-toggle {
                right: -20px;
            }
        /* İçerik Alanı */
        .admin-content {
            flex: 1;
            padding: 30px;
            transition: margin-left 0.3s ease-in-out;
        }
    </style>
</head>









