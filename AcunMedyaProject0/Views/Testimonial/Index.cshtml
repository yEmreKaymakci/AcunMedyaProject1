@model List<AcunMedyaProject0.Models.Tbl_Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referanslar sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>TestimonialID</th>
                <th>Açıklama1</th>
                <th>Referans Adı</th>
                <th>Açıklama2</th>
                <th>ResimUrl</th>
                <th>Başlık</th>
                <th>Güncelle</th>
                <th>Sil</th>
                
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TestimonialID</td>
                        <td>@item.Description1</td>
                        <td>@item.TestimonialName</td>
                        <td>@item.Description2</td>
                        <td><img src="@item.ImageUrl" style="width:50px" /></td>
                        <td>@item.Title</td>
                        <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-dark">Güncelle</a></td>
                        <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">Veri bulunamadı</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Testimonial/CreateTestimonial/" class="btn btn-success">Oluştur</a>
</div>

