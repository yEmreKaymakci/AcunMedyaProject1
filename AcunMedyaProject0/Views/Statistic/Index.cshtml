@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="modern-title">İstatistik sayfası</h2>
<style>
    .stats-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }

    .stats-card {
        /* Kartların ana renkleri farklı; örnek olarak bazı kartlarda #99cccc, diğerlerinde #669999 kullanıldı. */
        /* Bu örnekte dış dolguyu belirginleştirmek için border ekledik. */
        background-color: inherit;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
        border: 5px solid #d9e6ea; /* Açık griye yakın mavi ton */
        margin: 10px;
    }

        .stats-card:hover {
            transform: scale(1.03);
        }

    .card-header {
        font-weight: bold;
        font-size: 1.2em;
        margin-bottom: 10px;
        color: #ffffff;
        background-color: #669999;
        padding: 10px;
        border-radius: 10px 10px 0 0;
    }

    .card-body {
        background-color: #ffffff;
        padding: 15px;
        border-radius: 0 0 10px 10px;
    }

        /* Veri gösterimlerini daha belirgin hale getirmek için (örn. sayıların) */
        .card-body p {
            font-weight: bold;
            font-size: 1.1em;
            margin: 5px 0;
        }
</style>

<div class="container-fluid">
    <div class="stats-grid">
        <!-- 1. Satır -->
        <div class="stats-container">
            <div class="stats-card" style="background-color: #99cccc; ">
                <div class="card-header"><i class="fas fa-list-alt stats-icon"></i> KATEGORİLER</div>
                <div class="card-body">
                    <p>Toplam Kategori Sayısı: @ViewBag.CategoryCount</p>
                    <p>Son Kategori Adı: @ViewBag.LastCategory</p>
                </div>
            </div>

            <div class="stats-card" style="background-color: #99cccc;">
                <div class="card-header"><i class="fas fa-star stats-icon"></i> REFERANSLAR</div>
                <div class="card-body">
                    <p>Toplam Referans Sayısı: @ViewBag.TestimonialCount</p>
                    <p>Son Eklenen Referans: @ViewBag.LastTestimonial</p>
                </div>
            </div>

            <div class="stats-card" style="background-color: #99cccc; ">
                <div class="card-header"><i class="fas fa-briefcase stats-icon"></i> PROJELER</div>
                <div class="card-body">
                    <p>Toplam Proje Sayısı: @ViewBag.ProjectCount</p>
                    <p>Son Eklenen Proje: @ViewBag.LastProject</p>
                </div>
            </div>

            <div class="stats-card" style="background-color: #99cccc;">
                <div class="card-header"><i class="fas fa-graduation-cap stats-icon"></i> EĞİTİMLER</div>
                <div class="card-body">
                    <p>Toplam Eğitim Sayısı: @ViewBag.EducationCount</p>
                    <p>Son Eklenen Eğitim: @ViewBag.LastEducation</p>
                </div>
            </div>
        </div>

        <!-- 2. Satır -->
        <div class="stats-container">
            <div class="stats-card" style="background-color: #99cccc; ">
                <div class="card-header"><i class="fas fa-chart-line stats-icon"></i> DENEYİMLER</div>
                <div class="card-body">
                    <p>Toplam Deneyim Sayısı: @ViewBag.JobsCount</p>
                    <p>Son Eklenen Deneyim: @ViewBag.LastJobs</p>
                </div>
            </div>

            <div class="stats-card" style="background-color: #99cccc;">
                <div class="card-header"><i class="fas fa-envelope stats-icon"></i> MESAJLAR</div>
                <div class="card-body">
                    <p>Toplam Mesaj Sayısı: @ViewBag.MessageCount</p>
                    <p>Son Mesaj: @ViewBag.LastMessage</p>
                </div>
            </div>

            <div class="stats-card" style="background-color:#99cccc;">
                <div class="card-header"><i class="fas fa-cogs stats-icon"></i> HİZMETLER</div>
                <div class="card-body">
                    <p>Toplam Hizmet Sayısı: @ViewBag.ServicesCount</p>
                    <p>Son Eklenen Hizmet: @ViewBag.LastServices</p>
                </div>
            </div>

            <div class="stats-card" style="background-color: #99cccc;">
                <div class="card-header"><i class="fas fa-lightbulb stats-icon"></i> YETENEKLER</div>
                <div class="card-body">
                    <p>Toplam Yetenek Sayısı: @ViewBag.SkillCount</p>
                    <p>Son Eklenen Yetenek: @ViewBag.LastSkill</p>
                </div>
            </div>
        </div>
    </div>


